	<creationDate>Oct 2018</creationDate>
	<copyright>(C) 2007 - 2014 Digital Peak. All rights reserved.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.htmlGNU/GPL</license>
	<authorEmail>info@digital-peak.com</authorEmail>
	<authorUrl>joomla.digital-peak.com</authorUrl>
	<version>7.0.8</version>
	<description>PLG_DPCALENDAR_RSEVENTS_XML_DESCRIPTION</description>
	<files>
		<filename plugin="rsevents">rsevents.php</filename>
		<folder>language</folder>
	</files>
	<config>
		<fields name="params" addfieldpath="/administrator/components/com_dpcalendar/models/fields">
			<fieldset name="advanced">
				<field name="cache" type="list" default="1"
				       label="PLG_DPCALENDAR_RSEVENTS_FIELD_CACHING_LABEL" description="PLG_DPCALENDAR_RSEVENTS_FIELD_CACHING_DESC">
					<option value="1">PLG_DPCALENDAR_RSEVENTS_FIELD_CACHING_JOOMLA</option>
					<option value="0">PLG_DPCALENDAR_RSEVENTS_FIELD_CACHING_NEVER</option>
				</field>
				<field name="cache_time" type="text" default="900"
				       label="PLG_DPCALENDAR_RSEVENTS_FIELD_CACHING_TIME_LABEL" description="PLG_DPCALENDAR_RSEVENTS_FIELD_CACHING_TIME_DESC"/>
			</fieldset>
		</fields>
	</config>
</extension>
