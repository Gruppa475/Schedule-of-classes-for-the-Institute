<?xml version="1.0" encoding="utf-8"?>

<form>
	<fields name="params">
		<fieldset name="params">
			<field name="page-id" type="text"
				label="PLG_DPCALENDAR_FACEBOOK_FIELD_PAGE_ID_LABEL" description="PLG_DPCALENDAR_FACEBOOK_FIELD_PAGE_ID_DESC"
				size="70" class="inputbox" default="" import="true"/>
			<field name="app-id" type="text" import="true"
				label="PLG_DPCALENDAR_FACEBOOK_FIELD_APP_ID_LABEL" description="PLG_DPCALENDAR_FACEBOOK_FIELD_APP_ID_DESC"
				size="70" class="inputbox" default="" />
			<field name="secret" type="text" default="" import="true"
				label="PLG_DPCALENDAR_FACEBOOK_FIELD_SECRET_KEY_LABEL" size="80"
				description="PLG_DPCALENDAR_FACEBOOK_FIELD_SECRET_KEY_DESC" />
			<field name="access-token" type="text" default=""
				label="PLG_DPCALENDAR_FACEBOOK_FIELD_ACCESS_TOKEN_LABEL" size="80"
				description="PLG_DPCALENDAR_FACEBOOK_FIELD_ACCESS_TOKEN_DESC" />
				
			<field name="ids" type="dpcalendar" multiple="true" size="10"
				description="PLG_DPCALENDAR_FACEBOOK_FIELD_SELECT_CALENDARS_DESC"
				extension="com_dpcalendar" label="PLG_DPCALENDAR_FACEBOOK_FIELD_SELECT_CALENDARS_LABEL" />
			<field name="eventsinsubcat" type="radio" class="btn-group"
				label="PLG_DPCALENDAR_FACEBOOK_FIELD_EVENTS_SUBCATEGORIES_LABEL"
				description="PLG_DPCALENDAR_FACEBOOK_FIELD_EVENTS_SUBCATEGORIES_DESC"
				default="0">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field name="creationeventupdate" type="radio" class="btn-group"
				label="PLG_DPCALENDAR_FACEBOOK_FIELD_CREATION_EVENT_UPDATE_LABEL"
				description="PLG_DPCALENDAR_FACEBOOK_FIELD_CREATION_EVENT_UPDATE_DESC"
				default="1">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field name="updateeventupdate" type="radio" class="btn-group"
				label="PLG_DPCALENDAR_FACEBOOK_FIELD_UPDATE_EVENT_UPDATE_LABEL"
				description="PLG_DPCALENDAR_FACEBOOK_FIELD_UPDATE_EVENT_UPDATE_DESC"
				default="1">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field name="deletioneventupdate" type="radio" class="btn-group"
				label="PLG_DPCALENDAR_FACEBOOK_FIELD_DELETION_EVENT_UPDATE_LABEL"
				description="PLG_DPCALENDAR_FACEBOOK_FIELD_DELETION_EVENT_UPDATE_DESC"
				default="0">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field name="action-create" type="hidden" default="false" />
			<field name="action-edit" type="hidden" default="false" />
			<field name="action-delete" type="hidden" default="false" />
		</fieldset>
	</fields>
</form>